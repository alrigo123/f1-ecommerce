	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Join Us!</p>
						<h1>Register Area</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- contact form -->
	<div class="contact-from-section mt-3 mb-150">
		<div class="container">
			<div class="row text-center align-items-center justify-content-center">
				<div class="col-lg-8 mb-5 mb-lg-0 text-center">
					<div class="form-title">
						<h2>Create a free account?</h2>
						<p>REGISTER O LOGIN CON GOOGLE</p>
					</div>
					<div id="form_status">
						<div class="contact-form">
							<%- include ("./partials/flashMessages.ejs" ) %>
								<form action="/register" method="post" id="fruitkha-contact">
									<p>
										<input type="text" placeholder="Name" name="name" id="name"
											value="<%= typeof name != 'undefined' ? name : '' %>">
										<input type="text" placeholder="Last Name" name="last_name" id="last_name"
											value="<%= typeof last_name != 'undefined' ? last_name : '' %>">
									</p>
									<p>
										<input type="text" placeholder="Username" name="username" id="username"
											value="<%= typeof username != 'undefined' ? username : '' %>">
										<input type="email" placeholder="Email" name="email" id="email"
											value="<%= typeof email != 'undefined' ? email : '' %>">
									</p>
									<p>
										<input type="password" placeholder="Password" name="password" id="password"
											value="<%= typeof password != 'undefined' ? password : '' %>">
										<input type="password" placeholder="Repeat your password" name="repeatPassword"
											id="repeatPassword" value="<%= typeof repeat_password != 'undefined' ? repeat_password :
											'' %>">
									</p>
									<input type="hidden" name="token" value="FsWga4&@f6aw" />
									<p><input type="submit" value="Submit"></p>
								</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end contact form -->

	<%- include ("./layouts/footer.ejs" ) %>