						<h1>EDIT PRODUCT</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- contact form -->
	<div class="contact-from-section mt-5 mb-5">
		<div class="container">
			<div class="row text-center align-items-center justify-content-center">
				<div class="col-lg-8 mb-5 mb-lg-0 text-center">
					<div class="form-title">
						<h2>EDIT PRODUCT</h2>
					</div>
				 	<div id="form_status"></div>
					<div class="contact-form">
						<form type="POST" action="/editProduct" id="fruitkha-contact" onSubmit="return valid_datas( this );" enctype="multipart/form-data">

							<div class="row">
								<% for( let i = 0; i < data.length; i++ ) { %>
									<div class="form-group col-md-6 flex-column d-flex input-box">
									<p class="text-left label-form">PRODUCT NAME</p>
									<input value="<%= data[i].name %> " type="text" class="form-control" placeholder="Enter product name" name="name">
								</div>
								<div class="form-group col-md-6 flex-column d-flex input-box">
									<p class="text-left label-form">PRICE</p>
									<input value="<%= data[i].price %>" type="number" class="form-control" placeholder="Enter Price" name="price">
								</div>
								
								<div class="form-group col-md-6 flex-column d-flex input-box">
									<p class="text-left label-form">CATEGORY</p>
									<select id="" name="" class="select" onblur="validate(3)">
										<% for( let j = 0; j < order.length; j++ ) { %>
											<option value="<%= order[j].id_category %>"><%= order[j].name %></option>
										<% } %>
                                    </select>
                                </div>
								<div class="form-group col-md-6 flex-column d-flex input-box">
									<p class="text-left label-form">STOCK</p>
									<input value="<%= data[i].stock %>" type="number" class="form-control" placeholder="Enter Stock Available" name="stock">
								</div>
								<div class="form-group col-md-12 flex-column d-flex input-box" style="margin-top: 0px;">
									<p class="text-left label-form">DESCRIPTION</p>
									<textarea cols="10" rows="6" class="form-control" name="description"><%= data[i].description %></textarea>
								</div>
								<div class="form-group col-md-12 flex-column d-flex input-box text-center">
									<p class="text-left label-form">CURRENTLY IMAGE FILE</p>
									<img src="/img/products/<%= data[i].img %>" width="25%" alt="">
									<input value="<%= data[i].img %>" type="file" value class="form-control" name="img">
								</div>
							</div>
							<% } %>
							
							<p class="mt-3"><input type="submit" value="Submit"></p>
							<input type="hidden" name="token" value="FsWga4&@f6aw" />
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end contact form -->

