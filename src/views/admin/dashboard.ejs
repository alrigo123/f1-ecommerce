	<!-- Table Products -->
            <div class="container">
                <div class="col-md-12 text-center my-4" style="border: 3px transparent rgb(175, 228, 0);">
                    <h3>Products F1-Ecomerce</h3>
                </div>
                <div class="col-md-6">
					<a href="/addProduct" class="btn btn-primary btn-md"> ADD PRODUCT</a>
                </div>
                <div class="col-md-12 text-center table-responsive m-auto p-3">
                    <table class="table table-dark table-hover">
                        <thead>
                          <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Stok</th>
                            <th scope="col">Image</th>
                            <th scope="col">Actions</th>
                          </tr>
                        </thead>
                        <tbody>
							<% for( let i = 0; i < data.length; i++ ) { %>
								<tr class="text-center">
									<th scope="row"><%= i+1 %> </th>
									<td><%= data[i].name %> </td>
									<td><%= data[i].price %></td>
									<td><%= data[i].stock %></td>
									<td class="text-center"><img src="/img/products/<%= data[i].img %>" width="60"></td> 
									<td class="text-center">
										<a href="/deleteProduct/<%= data[i].id_product%>" class="btn btn-danger btn-lg mx-2"><i class="fa-solid fa-trash-can"></i></a>
										<a href="/editProduct/<%= data[i].id_product %>" class="btn btn-success btn-lg mx-2"><i class="fa-solid fa-pencil"></i></a>
									</td>
								</tr>
								<% } %>
                        </tbody>
                    </table>
                </div>
            </div>

    
    
    <!-- End Table Products -->

